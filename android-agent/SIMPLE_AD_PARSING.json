    {
      "id": "step_12",
      "type": "wait",
      "duration": 4000
    },
    {
      "id": "step_13",
      "type": "scroll",
      "direction": "down",
      "pixels": 400,
      "smooth": true
    },
    {
      "id": "step_14",
      "type": "wait",
      "duration": 3000
    },
    {
      "id": "step_15",
      "type": "extract",
