{
  "id": "simple-ad-parsing",
  "name": "Простой парсинг рекламы (iframe)",
  "description": "Переходы по страницам сайта и сбор iframe рекламы",
  "type": "parsing",
  "timeout": 300000,
  "steps": [
    {
      "id": "step_0",
      "type": "wait",
      "duration": 2000
    },
    {
      "id": "step_1",
      "type": "navigate",
      "url": "https://www.pickuplineinsider.com/",
      "wait_for_load": true,
      "timeout": 30000
    },
    {
      "id": "step_2",
      "type": "wait",
      "duration": 5000
    },
    {
      "id": "step_3",
      "type": "scroll",
      "direction": "down",
      "pixels": 500,
      "smooth": true
    },
    {
      "id": "step_4",
      "type": "wait",
      "duration": 3000
    },
    {
      "id": "step_5",
      "type": "extract",
      "selector": "iframe[src]",
      "attribute": "src",
      "save_as": "ad_links_page1",
      "multiple": true
    },
    {
      "id": "step_6",
      "type": "click",
      "selector": "a[href*='pick-up-lines']:not([href*='#'])",
      "optional": true,
      "timeout": 5000
    },
    {
      "id": "step_7",
      "type": "wait",
      "duration": 4000
    },
    {
      "id": "step_8",
      "type": "scroll",
      "direction": "down",
